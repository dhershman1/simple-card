{
  "name": "simple-card",
  "version": "2.1.0",
  "description": "a simple plug and play credit card validation library using the lugn algorithm",
  "main": "dist/simple-card.min.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "clean": "node scripts/clean.js",
    "docs": "node scripts/docs.js",
    "create": "node scripts/create-export.js",
    "build": "rollup -c",
    "build:split": "rollup -c rollup.split.js",
    "test": "ava",
    "lint": "standard --fix src/**/*.js"
  },
  "ava": {
    "files": [
      "tests/*.js"
    ],
    "require": [
      "@babel/register"
    ],
    "failFast": true,
    "concurrency": 5,
    "babel": {
      "testOptions": {
        "presets": [
          "@ava/transform-test-files",
          "@ava/stage-4"
        ]
      }
    }
  },
  "standard": {
    "ignore": [
      "dist/*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dhershman1/simple-card.git"
  },
  "keywords": [
    "validation",
    "simple",
    "data",
    "simply",
    "valid",
    "frontend",
    "JS",
    "credit card"
  ],
  "author": "Dustin Hershman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dhershman1/simple-card/issues"
  },
  "homepage": "https://github.com/dhershman1/simple-card",
  "devDependencies": {
    "@babel/core": "7.0.0-beta.47",
    "@babel/preset-env": "7.0.0-beta.47",
    "@babel/preset-stage-2": "7.0.0-beta.47",
    "@babel/register": "7.0.0-beta.47",
    "ava": "1.0.0-beta.4",
    "del": "3.0.0",
    "globby": "8.0.1",
    "jsdoc-to-markdown": "4.0.1",
    "rollup": "^0.59.1",
    "rollup-plugin-babel": "4.0.0-beta.4",
    "rollup-plugin-cleanup": "3.0.0-beta.1",
    "rollup-plugin-filesize": "1.5.0",
    "rollup-plugin-uglify": "3.0.0",
    "standard": "11.0.1"
  }
}
