{
  "name": "simple-card",
  "version": "1.3.2",
  "description": "a simple plug and play credit card validation library",
  "main": "dist/simple-card.umd.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "prepare": "rollup -c",
    "test": "ava",
    "lint": "eslint src/index.js && eslint src/helpers/index.js && eslint src/validation/index.js"
  },
  "babel": {
    "presets": [
      "env",
      "@ava/stage-4",
      "@ava/transform-test-files"
    ]
  },
  "ava": {
    "files": [
      "src/**/tests.js"
    ],
    "source": [
      "src/**/*.js"
    ],
    "concurrency": 5,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dhershman1/simple-card.git"
  },
  "keywords": [
    "validation",
    "simple",
    "data",
    "simply",
    "valid",
    "frontend",
    "JS",
    "credit card"
  ],
  "author": "Dustin Hershman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dhershman1/simple-card/issues"
  },
  "homepage": "https://github.com/dhershman1/simple-card",
  "devDependencies": {
    "ava": "^0.24.0",
    "babel": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "eslint": "4.5.0",
    "jsdoc-to-markdown": "^3.0.3",
    "rollup": "0.49.2",
    "rollup-plugin-buble": "0.15.0",
    "rollup-plugin-uglify": "2.0.1"
  }
}
